.page
	font-family 'Source Sans Pro'
	font-weight 300
	color #313f47

	background-image url("page__overlay.png"), -moz-linear-gradient(60deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35)), url("page__bg.jpg")
	background-image url("page__overlay.png"), -webkit-linear-gradient(60deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35)), url("page__bg.jpg")
	background-image url("page__overlay.png"), -ms-linear-gradient(60deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35)), url("page__bg.jpg")
	background-image url("page__overlay.png"), linear-gradient(60deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35)), url("page__bg.jpg")
	background-repeat repeat, no-repeat, no-repeat
	background-size 100px 100px, cover, cover
	background-position top left, center center, bottom center
	background-attachment fixed, fixed, fixed
		
	&::after
		content ''
		position fixed
		z-index -1
		top 0
		left 0
		opacity 0
		width 100%
		height 100%
		background-color #fff
		background-image url("page__overlay.png"), linear-gradient(60deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35))
		background-repeat repeat, no-repeat
		background-size 100px 100px, cover
		background-position top left, center center
		transition opacity 1.75s ease-out

	*
		box-sizing border-box

	@media screen and (max-width: 1680px)
		font-size 11pt
		
	@media screen and (max-width: 480px)
		min-width 320px

		font-size 10pt
		line-height 1.75
		
html
.page
	margin 0
	padding 0
	width 100%
	height 100%
	overflow auto
	